<div class="row">
  <div class="sidebar-dashboard d-flex flex-column align-items-center col-2">
    <h4 class="mt-3"><%= @site.name %></h4>
    <h6 class="mb-3"><%= @site.description %></h6>
    <div class="sidebar-dashboard-buttons d-flex flex-column align-items-center">
      <%= link_to "Edit site info", edit_site_path(@site), class: "btn-green-lg"%>
      <%= link_to "Delete", edit_site_path(@site), class: "btn-green-lg"%>
      <%= link_to "Edit site info",
          site_path(@site),
          class: "btn-green-lg",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      <%= link_to "Back to sites", root_path, class: "btn-green-lg"%>
    </div>
  </div>
  <div class="dashboard-main col-9">

  </div>






  <%# Guilds %>
  <h2>Add new guild</h2>
  <%= render "guilds/form", site: @site, guild: @guild %>

  <%# List of guilds  %>
  <ul>
    <% @site.guilds.each do |guild| %>
      <li><%= link_to guild.name, site_guild_path(guild) %></li>
    <% end %>
  </ul>
</div>
