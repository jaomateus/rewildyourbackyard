<div class="container-sites">
  <div class="row mt-5">
    <h4 class="mb-4">Welcome, <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h4>
    <div class="col-12 col-md-8">
      <div class="card-sites p-5">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="">My sites</h5>
          <div>
            <%= link_to "Add new site", new_site_path, class: "btn-green-small" %>
          </div>
        </div>
        <hr class="division-white">
        <ul>
          <% @sites.each do |site| %>
            <% if site.cover_photo.attached? %>
              <%= cl_image_tag site.cover_photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>
            <li><%= link_to site.name, site_path(site) %></li>
          <% end %>
        </ul>

      </div>
    </div>
    <div class="col-12 col-md-4">
      <h2></h2>
    </div>
  </div>
</div>
